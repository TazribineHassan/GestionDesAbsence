<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Image and text -->
    <nav class="navbar navbar-width navbar-expand-lg navbar-dark bgBlue">
        <a class="navbar-brand" href="#">
            <img src="~/assets/imgs/logo2.png" width="110" height="100" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="row py-2 px-md-5">
                <div class="col"></div>
                <div class="col-md-10 col-sm-10 text-center">
                    <h4 class="text-uppercase " id="header-color">gestion des absences</h4>
                </div>
                <div class="col"></div>
            </div>

            <div class="navbar-nav">
                <a class="nav-item nav-link active text-uppercase pl-md-5" href="#">acceuil<span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link  text-uppercase" href="http://www.ensas.uca.ma/#/" target="_blank">Site de l'école</a>
                <a class="nav-item nav-link text-uppercase" href="#">À propos de nous</a>
            </div>
        </div>
    </nav>
    <div class="container body-content bg-body">
        @RenderBody()
    </div>
    <footer class="row align-items-center justify-content-center text-white bgBlue">
        Copyright © 2016-2021 ENSA Safi
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Conten/Js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
