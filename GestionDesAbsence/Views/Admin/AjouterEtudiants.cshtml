
@{
    ViewBag.Title = "AjouterEtudiants";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">

    <br />
    <br />
    <blockquote class="blockquote">

        <h1 class="mb-0" style="font-size:large">
            <img src="/dist/img/students.png" alt="User Avatar" class="img-size-50 mr-3 img-circle">
            Ajouter Des Etudiants
        </h1>
        <footer class="blockquote-footer"> Via Excel File</footer>
    </blockquote>


    <hr />
    <h4>Choisissez le cycle et la classe des étudiants </h4><br />

    @using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.DropDownList("liste_cycle", ViewBag.list as SelectList, "Selectionnez le cycle", new { id = "liste_cycle" })
        <select id="etudiants" name="myclass" class="form-control"></select><br /><br />
        <h4>
            <img src="/dist/img/excel.png" alt="User Avatar" class="img-size-50 mr-3 img-circle" />
            Sélectionez un fichier </h4>
            <input name="file" type="file" id="file" /><br /><br/>
            <input type="submit" id="fileup" class="btn btn-primary" data-toggle="modal" value="submit" />
            <br /><br />


            }
            <a href="/Admin/AllEtudiants"> Consulter la liste des étudiants</a>


    </div>

    @section Section1{
        <script>
            $(document).ready(function (e) {
                $("#liste_cycle").addClass("form-control");

                $("#liste_cycle").change(function () {
                    $.get("/Admin/GetClass", { ID: $("#liste_cycle").val() }, function (data) {
                        $("#etudiants").empty();
                        $.each(data, function (index, ligne) {
                            $("#etudiants").append("<option value='" + ligne.Id + "'>" + ligne.Nom + "</option>")
                        });

                    });
                });
            });
        </script>
    }

