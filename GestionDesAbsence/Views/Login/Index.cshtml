@{
    ViewBag.Title = "Index";
}




@*Adminstrateur trigger modal*@
@*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#admin">Adminstrateur</button>*@
<div class="center row align-items-center">
    <div class="row py-3">
        <div class="col"></div>
        <div class="col-md-10 col-sm-10 text-center">
            <h2 class="text-uppercase">S'authentifier autant qu'un</h2>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col-md-4 col-sm-10 text-center">
            @*Professeur trigger modal*@
            <button type="button" class="btn bgBlue text-white" data-toggle="modal" data-target="#prof">Professeur</button>
        </div>
        <div class="col-md-4 col-sm-10 text-center">
            @*Etudiant trigger modal*@
            <button type="button" class="btn bgBlue text-white" data-toggle="modal" data-target="#etudiant">Etudiant</button>
        </div>
        <div class="col"></div>
    </div>
</div>





<!-- Admin Modal -->
<div class="modal fade" id="admin" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase" id="exampleModalCenterTitle">espace adminstrateur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="CheckAdmin" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" name="email" type="email" required />
                    </div>
                    <div class="form-group">
                        <label>Mot de passe:</label>
                        <input class="form-control" name="password" type="password" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Prof Modal -->
<div class="modal" id="prof" tabindex="-1" role="dialog" aria-labelledby="prof" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase" id="prof">espace professeur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="CheckTeacher" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" name="email" type="email" required />
                    </div>
                    <div class="form-group">
                        <label>Mot de passe:</label>
                        <input class="form-control" name="password" type="password" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Etudiant Modal -->
<div class="modal" id="etudiant" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-uppercase " id="exampleModalCenterTitle">espace etudiant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="CheckStudent" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" name="email" type="email" required />
                    </div>
                    <div class="form-group">
                        <label>Mot de passe:</label>
                        <input class="form-control" name="password" type="password" required />
                    </div>
                    <div class="text-danger">@ViewBag.Msg</div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
@if (@ViewBag.Msg != null) {
    <div class="alert alert-danger">@ViewBag.Msg</div>
 }




